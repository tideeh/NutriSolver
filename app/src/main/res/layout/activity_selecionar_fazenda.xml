<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- barra de tarefas -->
    <include
        android:id="@+id/my_toolbar_main"
        layout="@layout/barra_tarefas" />

    <TextView
        style="@style/texto_cabecalho"
        android:text="OlÃ¡, selecione uma Fazenda!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_weight="7"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lista_fazendas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            style="@style/botao_confirmar"
            android:onClick="cadastrarFazenda"
            android:text="@string/cadastrar_fazenda" />
    </LinearLayout>

</LinearLayout>